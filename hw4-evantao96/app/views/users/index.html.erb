<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>


  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, "/users/#{user.id}" %></td>
        <td><%= link_to 'Edit', "/users/#{user.id}/edit" %></td>
        <td><%= link_to 'Delete', "/users/#{user.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', '/users/new', class: 'btn btn-primary' %>
